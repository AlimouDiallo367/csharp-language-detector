<Window x:Class="TP2_DetectionLangue.Views.TokenStatusView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TP2_DetectionLangue.ViewModels"
        mc:Ignorable="d"
        Title="Statut de jeton" Height="430" Width="350" Icon="/Resources/globe.ico"
        >

    <Window.DataContext>
        <viewmodels:TokenStatusViewModel/>
    </Window.DataContext>

    <StackPanel Margin="20">
        
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" Content="Date : " Padding="0,5" Margin="0,10,0,0"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentDate}" Margin="10,13,0,3"/>
            
            <Label Grid.Row="1" Grid.Column="0" Content="Requêtes aujourd'hui : " Padding="0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TodayRequests}" Margin="10,8,0,3"/>
            
            <Label Grid.Row="2" Grid.Column="0" Content="Octets aujourd'hui : " Padding="0,5" Margin="0,0,0,15"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TodayBytes}" Margin="10,8,0,18"/>
            
            <Label Grid.Row="3" Grid.Column="0" Content="Plan : "/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentPlan}"  Margin="10,8,0,3"/>
            
            <Label Grid.Row="4" Grid.Column="0" Content="Expiration du plan : " Padding="0,5"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PlanExpirationDate}" Margin="10,8,0,3"/>
            
            <Label Grid.Row="6" Grid.Column="0" Content="Limite requêtes quotidienne : " Padding="0,5"/>
            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding DailyRequestsLimit}"  Margin="10,8,0,3"/>
            
            <Label Grid.Row="7" Grid.Column="0" Content="Limite octets quotidienne : " Padding="0,5"/>
            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding DailyBytesLimit}" Margin="10,8,0,3"/>
            
            <Label Grid.Row="8" Grid.Column="0" Content="Statut : " Padding="0,5" Margin="0,15,0,0"/>
            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding TokenStatus}" Margin="10,18,0,3"/>
            
        </Grid>
        
        <Button Content="Fermer" 
                HorizontalAlignment="Center" 
                Width="100" 
                Padding="10,5"
                Margin="0,20,0,0"
                Command="{Binding CloseCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
        />
        
    </StackPanel>
</Window>